        "google-drive": {
            "command": "uvx",
            "args": [
                "@modelcontextprotocol/server-google-drive"
            ]
        },
        "github": {
            "command": "uvx",
            "args": [
                "@modelcontextprotocol/server-github"
            ]
        },
        "slack": {
            "command": "uvx",
            "args": [
                "@modelcontextprotocol/server-slack"
            ]
        },
        "stripe": {
            "command": "uvx",
            "args": [
                "@modelcontextprotocol/server-stripe"
            ]
        },
        "gmail": {
            "command": "uvx",
